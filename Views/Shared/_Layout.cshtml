@*
    Layout principal corregido - Óptica Lincoln’s
    Incluye RenderBody(), header con tres columnas, y estructura completa funcional.
*@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Óptica Lincoln’s</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Optica1.styles.css" asp-append-version="true" />

    <!-- Iconos -->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Fuente -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fc;
            color: #333;
        }

        /* 🔵 HEADER */
        header {
            background: linear-gradient(180deg, #ffffff 0%, #f3f7ff 100%);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            padding: 8px 0;
        }

        .navbar-brand img {
            height: 90px;
            width: auto;
            transition: transform 0.3s ease-in-out;
        }

            .navbar-brand img:hover {
                transform: scale(1.05);
            }

        .header-row {
            align-items: center;
        }

        /* 🔹 Frase central */
        .header-center h2 {
            color: #004aad;
            font-weight: 600;
            margin: 5px 0 10px 0;
            font-size: 1.5rem;
        }

        /* 🔹 Barra de búsqueda */
        .search-bar {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

            .search-bar input {
                width: 70%;
                max-width: 480px;
                border-radius: 50px;
                border: 1.5px solid #ccc;
                padding: 6px 18px;
                box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
            }

            .search-bar button {
                border-radius: 50px;
                padding: 8px 18px;
                font-weight: 500;
            }

        /* 🔹 Botón sesión */
        .btn-outline-primary {
            border: 2px solid #004aad;
            color: #004aad;
            font-weight: 500;
            border-radius: 10px;
        }

            .btn-outline-primary:hover {
                background-color: #004aad;
                color: white;
            }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        /* 🔹 Contenido */
        main {
            padding: 40px 0 60px 0;
            min-height: 70vh;
            animation: fadeIn 0.6s ease-out;
        }

        /* 🔹 Footer */
        footer {
            background-color: #004aad;
            color: #fff;
            text-align: center;
            padding: 25px 0;
            margin-top: 40px;
        }

            footer a {
                color: #a6d3ff;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>

    <!-- 🟦 HEADER -->
    <header>
        <div class="container-fluid py-3"
             style="background: linear-gradient(180deg, #ffffff 0%, #f5f8ff 100%); box-shadow: 0 2px 6px rgba(0,0,0,0.08);">
            <div class="row align-items-center">

                <!-- 🟦 Columna Izquierda: LOGO -->
                <div class="col-12 col-md-3 text-center text-md-start mb-2 mb-md-0">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                        <img src="~/img/Logo.jpeg" alt="Óptica Lincoln’s"
                             style="height: 150px; width: auto; max-width: 100%; transition: transform 0.3s ease-in-out;"
                             onmouseover="this.style.transform='scale(1.05)';"
                             onmouseout="this.style.transform='scale(1)';" />
                    </a>
                </div>

                <!-- ⚪ Columna Central: Frase + Barra de búsqueda -->
                <div class="col-12 col-md-6 text-center">
                    <h2 style="color: #004aad; font-weight: 600; font-size: 1.6rem; margin-bottom: 10px;">
                        Cuidamos tu visión cada día <i class="fa-solid fa-user-doctor text-primary" style="font-size:1.8rem;"></i>


                    </h2>

                    <div class="d-flex justify-content-center align-items-center">
                        <input type="text" class="form-control"
                               placeholder="Buscar en Óptica Lincoln’s..."
                               style="max-width: 480px; border-radius: 50px; border: 1.5px solid #ccc; padding: 10px 18px; box-shadow: 0 1px 4px rgba(0,0,0,0.08);">
                        <button class="btn btn-primary ms-2 px-4 py-2 rounded-pill">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                    </div>
                </div>

                <!-- 🟥 Columna Derecha: Botón de sesión -->
                <div class="col-12 col-md-3 text-center text-md-end mt-3 mt-md-0 pe-md-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="me-2 fw-semibold">
                            <i class="bi bi-person-circle"></i> @User.Identity.Name
                        </span>
                        <a class="btn btn-outline-danger btn-lg rounded-pill px-4 py-2"
                           style="font-size: 1rem;"
                           asp-controller="Login" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary btn-lg rounded-pill px-4 py-2"
                           style="font-size: 1rem; transform: scale(1.4); transform-origin: right center;"
                           asp-controller="Login" asp-action="Index">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
                        </a>
                    }
                </div>
            </div>
        </div>
    </header>


    <!-- 🟢 CONTENIDO PRINCIPAL -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- 🔹 FOOTER -->
    <footer class="text-center text-lg-start">
        <div class="container p-4">
            <div class="row text-start">
                <div class="col-lg-6 mb-4">
                    <h5 class="text-uppercase">Óptica Lincoln's</h5>
                    <p>Expertos en salud visual. Exámenes visuales, asesoría profesional y productos de alta calidad.</p>
                </div>
                <div class="col-lg-3 mb-4">
                    <h5 class="text-uppercase">Contacto</h5>
                    <ul class="list-unstyled">
                        <li><strong>Teléfono:</strong> 555-123-4567</li>
                        <li><strong>Email:</strong> contacto@opticalincons.com</li>
                        <li><strong>Dirección:</strong> Calle Principal #123, Ciudad</li>
                    </ul>
                </div>
                <div class="col-lg-3 mb-4">
                    <h5 class="text-uppercase">Importante</h5>
                    <ul class="list-unstyled">
                        <li>Exámenes visuales anuales recomendados.</li>
                        <li>Atención personalizada para toda la familia.</li>
                        <li>Equipos con tecnología de punta.</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="text-center p-3 bg-dark text-white">
            © 2025 Óptica Lincoln's — Todos los derechos reservados.
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
