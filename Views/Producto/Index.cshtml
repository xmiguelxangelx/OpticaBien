@model List<Optica1.Models.Producto>



<div class="container mt-4">
    <h2 class="text-primary mb-4">
        <i class="bi bi-bag"></i> Catálogo de Productos
    </h2>

    <div class="row">
        @foreach (var item in Model)
        {
            string imagen = item.Nombre switch
            {
                "Lentes de contacto" => Url.Content("~/imagenes/Lentes de contacto .png"),
                "Lentes progresivos" => Url.Content("~/imagenes/Lentes progresivos.png"),
                "Lentes progresivos premium" => Url.Content("~/imagenes/Lente progresivo premiun.png"),
                "Estuche para lentes rígido" => Url.Content("~/imagenes/Estuche para Gafas.png"),
                "Montura normal" => Url.Content("~/imagenes/Montura normal.png"),
                "Montura premium" => Url.Content("~/imagenes/Montura premiun.png"),
                "Gotas lubricantes" => Url.Content("~/imagenes/gotas lubricantes.png"),
                "Paño de microfibra" => Url.Content("~/imagenes/Paños de microfibra.png"),
                "Solución limpiadora 100ml" => Url.Content("~/imagenes/Solución Limpiadora.png"),
                _ => Url.Content("~/imagenes/500.jpeg") // Imagen por defecto
            };

            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <img src="@imagen" class="card-img-top" alt="@item.Nombre" style="height:200px; object-fit:cover;" />

                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text"><strong>Stock:</strong> @item.Stock</p>
                        <p class="fw-bold text-success">$ @item.Precio</p>
                        <p class="text-muted">
                            <small>Última actualización: @(item.FechaActualizacion?.ToString("dd/MM/yyyy") ?? "N/A")</small>
                        </p>
                    </div>

                    <div class="card-footer text-center bg-white">
                        <a href="#" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-cart-plus"></i> Agregar al carrito
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
