@model Optica1.Models.Perfil

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6 p-4 shadow-lg rounded-4 bg-light">
            <h2 class="text-center mb-4 fw-bold" style="color: #0C65B5;">Nuevo Perfil</h2>

            <form asp-controller="PerfilControlador" asp-action="Nuevo" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">ID Perfil</label>
                    <input class="form-control" asp-for="IdPerfil" type="number" placeholder="Ingrese el ID del perfil" required />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Descripción</label>
                    <input class="form-control" asp-for="Descripcion" type="text" placeholder="Ingrese la descripción del perfil" required />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn" style="background-color: #0C65B5; color: white;">
                        <i class="bi bi-save"></i> Guardar
                    </button>

                    <a asp-controller="PerfilControlador" asp-action="Lista" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
