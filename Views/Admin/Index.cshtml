
@{
    ViewData["Title"] = "Panel de Administración";
}

<div class="container mt-5">


    <div class="text-center mb-5">
        <h2 class="fw-bold display-5 text-primary">⚙️ Administración de Óptica</h2>
        <p class="text-muted lead">Acceda a los módulos de gestión para la administración centralizada del sistema.</p>
    </div>

    <div class="row g-5 justify-content-center">

        <div class="col-md-6 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 h-100 card-minimal-hover">
                <div class="card-body d-flex align-items-center p-4">
                    <i class="bi bi-person-lines-fill fs-1 text-info me-4"></i>
                    <div>
                        <h5 class="card-title fw-bold mb-1">Gestión de Personas</h5>
                        <p class="card-text text-muted small">Registros de identidad (clientes, empleados, optometras).</p>
                        <a asp-controller="PersonasssController1" asp-action="Lista" class="btn btn-outline-info btn-sm mt-1">
                            <i class="bi bi-arrow-right"></i> Ir a Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>



       


        <div class="col-md-6 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 h-100 card-minimal-hover">
                <div class="card-body d-flex align-items-center p-4">
                    <i class="bi bi-person-gear fs-1 text-success me-4"></i>
                    <div>
                        <h5 class="card-title fw-bold mb-1">Usuarios y Roles</h5>
                        <p class="card-text text-muted small">Cuentas de acceso, contraseñas y asignación de permisos.</p>
                        <a asp-controller="PerfilControlador" asp-action="lista" class="btn btn-outline-success btn-sm mt-1">
                            <i class="bi bi-arrow-right"></i> Ir a Usuarios
                        </a>
                    </div>
                </div>
            </div>
        </div>


        

      
        <div class="col-md-6 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 h-100 card-minimal-hover">
                <div class="card-body d-flex align-items-center p-4">
                    <i class="bi bi-truck fs-1 text-warning me-4"></i>
                    <div>
                        <h5 class="card-title fw-bold mb-1">Gestión de Proveedores</h5>
                        <p class="card-text text-muted small">Contactos, registro y gestión de la compra de insumos.</p>
                        <a asp-controller="ProvedorController1" asp-action="Lista" class="btn btn-outline-warning btn-sm mt-1">
                            <i class="bi bi-arrow-right"></i> Ir a Proveedores
                        </a>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="col-md-6 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 h-100 card-minimal-hover">
                <div class="card-body d-flex align-items-center p-4">
                    <i class="bi bi-bandaid fs-1 text-secondary me-4"></i>
                    <div>
                        <h5 class="card-title fw-bold mb-1">Gestión de Tratamientos</h5>
                        <p class="card-text text-muted small">Administración de los servicios de salud visual ofrecidos.</p>
                        <a asp-controller="TratamientoControlador" asp-action="Lista" class="btn btn-outline-secondary btn-sm mt-1">
                            <i class="bi bi-arrow-right"></i> Ir a Tratamientos
                        </a>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-6 col-lg-6 d-none d-lg-block"></div>
  

    </div>

    
    <div class="text-center mt-5 pt-4 border-top">
        <button type="button" class="btn btn-outline-dark rounded-pill px-4" onclick="window.history.back()">
            <i class="bi bi-arrow-left-circle"></i> Volver a la página anterior
        </button>
    </div>



    <a asp-controller="Errorsito405" asp-action="Index" class="btn btn-outline-danger btn-sm d-inline-flex align-items-center">
        <i class="bi bi-exclamation-triangle me-1"></i> Error
    </a>

</div>


<style>
    
    .card-minimal-hover {
        
        border: 1px solid #e0e0e0;
        transition: all 0.3s ease;
    }

        .card-minimal-hover:hover {
           
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
            border-color: var(--bs-primary); 
            transform: translateY(-2px);
        }
</style>