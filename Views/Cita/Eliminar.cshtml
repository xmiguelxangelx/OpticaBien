@model Optica1.Models.Citas

@{
    ViewData["Title"] = "Eliminar Cita";
}

<div class="container mt-4">
    <h2>Eliminar Cita</h2>
    <p class="text-danger">
        ¿Está seguro que desea eliminar (inactivar) esta cita?
    </p>

    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Hora</dt>
        <dd class="col-sm-10">@Model.Hora.ToString(@"hh\:mm")</dd>

        <dt class="col-sm-2">Motivo</dt>
        <dd class="col-sm-10">@Model.Motivo</dd>

        <dt class="col-sm-2">Paciente</dt>
        <dd class="col-sm-10">@Model.IdUsuariopacienteNavigation?.NombreUsuario</dd>

        <dt class="col-sm-2">Optómetra</dt>
        <dd class="col-sm-10">@Model.IdUsuarioempleadoNavigation?.NombreUsuario</dd>
    </dl>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="IdCita" />

        <button type="submit" class="btn btn-danger">Confirmar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
