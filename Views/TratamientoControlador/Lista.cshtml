@model List<Optica1.Models.Tratamiento>

<div class="container my-4">
    <div class="text-center mb-3">
        <h2 class="fw-bold">Lista de Tratamientos</h2>
    </div>

    
    <div class="d-flex justify-content-center mb-3 gap-2">
        <a asp-controller="TratamientoControlador"
           asp-action="Nuevo"
           class="btn"
           style="background-color: #0C65B5; color: white;">
            <i class="bi bi-plus-circle"></i> Crear
        </a>

        <a asp-controller="TratamientoControlador"
           asp-action="ExportarExcel"
           class="btn"
           style="background-color: #0C65B5; color: white;">
            <i class="bi bi-file-earmark-excel"></i> Exportar Excel
        </a>
    </div>

    
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered text-center align-middle shadow-lg mx-auto" style="max-width: 90%;">
            <thead style="background-color: #0C65B5; color: white;">
                <tr>
                    <th>ID Tratamiento</th>
                    <th>Fecha Edición</th>
                    <th>Detalle Tratamiento</th>
                    <th>Indicaciones</th>
                    <th>ID Diagnóstico</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdTratamiento</td>
                        <td>@item.FechaEdicion?.ToString("yyyy-MM-dd")</td>
                        <td>@item.DetallesTratamiento</td>
                        <td>@item.Indicaciones</td>
                        <td>@item.IdDiagnostico</td>
                        <td>
                            <a asp-controller="TratamientoControlador"
                               asp-action="Editar"
                               asp-route-id="@item.IdTratamiento"
                               class="btn btn-primary btn-sm mb-1">
                                <i class="bi bi-pencil-square"></i> 
                            </a>

                            <a asp-controller="TratamientoControlador"
                               asp-action="Eliminar"
                               asp-route-id="@item.IdTratamiento"
                               onclick="return confirmar()"
                               class="btn btn-danger btn-sm mb-1">
                                <i class="bi bi-trash"></i> 
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    
    <div class="text-center mt-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

@section Scripts {
    <script>
        function confirmar() {
            return confirm("¿Está seguro de eliminar?");
        }
    </script>
}